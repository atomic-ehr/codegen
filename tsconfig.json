{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "baseUrl": ".",
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@root/*": ["./src/*"],
      "@typeschema/*": ["./src/typeschema/*"],
      "@typeschema-test/*": ["./test/unit/typeschema/*"]
    }
  },
  "include": ["./src", "./test"],
  "exclude": [
    "./types",
    "generated",
    "examples",
    "./test/helpers/schema-helpers.ts",
    "./test/integration/typescript-generation.test.ts",
    "./test/integration/value-set-workflow.test.ts",
    "./test/performance/generation-speed.test.ts",
    "./test/unit/api/generators/base/BaseGenerator.test.ts",
    "./test/unit/api/generators/base/BaseGenerator.test.ts",
    "./test/unit/api/generators/base/TypeMapper.test.ts",
    "./test/unit/api/generators/base/error-handling.test.ts",
    "./test/unit/api/generators/base/error-handling.test.ts",
    "./test/unit/api/generators/base/errors.test.ts",
    "./test/unit/api/generators/runtime-validation.test.ts",
    "./test/unit/api/generators/typescript.test.ts",
    "./test/unit/api/generators/value-set-functionality.test.ts",
    "./test/unit/api/generators/value-set-generation.test.ts",
    "./test/unit/api/generators/value-set-snapshots.test.ts",
    "./test/unit/typeschema/field-builder.test.ts",
    "./test/unit/typeschema/transformer.test.ts"
  ]
}

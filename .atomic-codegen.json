{
  "$schema": "https://atomic-ehr.github.io/codegen/config-schema.json",
  "version": "1.0.0",
  "project": {
    "name": "@atomic-ehr/codegen",
    "description": "Atomic EHR FHIR Code Generation Library",
    "rootDir": ".",
    "workingDir": "tmp/atomic-codegen"
  },
  "typeschema": {
    "packages": [
      "hl7.fhir.r4.core@4.0.1",
      "hl7.fhir.us.core@6.1.0"
    ],
    "outputFormat": "ndjson",
    "validation": true,
    "verbose": false,
    "dropCache": false
  },
  "generator": {
    "target": "typescript",
    "outputDir": "./types/generated",
    "includeComments": true,
    "includeValidation": true,
    "namespaceStyle": "nested",
    "fileNaming": "PascalCase",
    "format": true,
    "fileHeader": "Generated by @atomic-ehr/codegen - DO NOT EDIT MANUALLY",
    "overwrite": true
  },
  "languages": {
    "typescript": {
      "strict": true,
      "target": "ES2020",
      "module": "ES2020",
      "declaration": true,
      "useEnums": true,
      "preferInterfaces": true,
      "baseTypesModule": "@atomic-ehr/fhir-types"
    }
  },
  "global": {
    "verbose": false,
    "cache": {
      "enabled": true,
      "directory": ".codegen/cache",
      "ttl": 3600,
      "maxSize": 200
    },
    "logging": {
      "level": "info",
      "format": "text",
      "output": "console"
    }
  }
}

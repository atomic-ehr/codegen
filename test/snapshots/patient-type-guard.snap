/**
 * Type guard for Patient
 */
export function isPatient(value: unknown): value is Patient {
	if (typeof value !== 'object' || value === null) return false;
	const obj = value as Record<string, unknown>;
	
	if (typeof obj.resourceType !== 'string' || obj.resourceType !== 'Patient') return false;
	
	if (obj.id !== undefined && typeof obj.id !== 'string') return false;
	if (obj.meta !== undefined && !isMeta(obj.meta)) return false;
	if (obj.name !== undefined && (!Array.isArray(obj.name) || !obj.name.every(item => isHumanName(item)))) return false;
	if (obj.gender !== undefined && !['male', 'female', 'other', 'unknown'].includes(obj.gender as string)) return false;
	if (obj.birthDate !== undefined && typeof obj.birthDate !== 'string') return false;
	if (obj.active !== undefined && typeof obj.active !== 'boolean') return false;
	
	return true;
}